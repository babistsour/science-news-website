---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';


const pageTitle = "Homepage";
const currentYear = new Date().getFullYear();
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{pageTitle}</title>
	</head>
	<body>

		<Header />
		<h1>{pageTitle}</h1>
		<section>
			<h2>Welcome to Astrostormtroopers</h2>
			<p>
				Explore the latest news and updates in the world of science. Stay informed with our curated articles and insights.
			</p>
			<p>
				Discover fascinating topics ranging from space exploration to cutting-edge technology. Dive in and expand your knowledge!
			</p>
			<p>&copy; {currentYear} Astrostormtroopers. All rights reserved.</p>
		</section>
		<Footer />
		<script>
			import "../scripts/menu.js";
		</script>
	</body>
</html>


