---
import BaseLayout from "../layouts/BaseLayout.astro"
import BlogPost from "../components/BlogPost.astro";
const pageTitle = "Science News Blog";

const allPosts = Object.values(import.meta.glob('./posts/*.md', { eager: true }));
---

<BaseLayout pageTitle = {pageTitle}>
      <p>Welcome to our blog! Here, you'll find the latest updates, insights, and stories from the world of science and astronomy.</p>
      <section>
        <h2>Latest Posts</h2>
        <ul>
        {allPosts.map((post:any) => <BlogPost url={post.url} title={post.frontmatter.title} />)}
        </ul>
      </section>
</BaseLayout>
